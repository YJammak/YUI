<Application x:Class="YUI.Test.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:YUI.Test"
             xmlns:yui="http://yjk.name/winfx/xaml/wpf"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/YUI.WPF;component/YThemes/YDefaultThemes.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="yui:YMessageBox">
                <Setter Property="ButtonBackground" Value="Red"/>
                <Setter Property="MouseOverButtonBackground" Value="{StaticResource YButtonMouseOverBackground}"/>
                <Setter Property="PressedButtonBackground" Value="{StaticResource YButtonPressedBackground}"/>
                <Setter Property="ButtonForeground" Value="White"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
