<Window x:Class="YUI.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YUI.Test"
        xmlns:yui="clr-namespace:YUI.YProperties;assembly=YUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Width="80" Height="27" VerticalAlignment="Center" HorizontalAlignment="Center" Content="你好"/>
        <TextBox Margin="10" yui:YAttachProperty.YWatermark="你好"></TextBox>
        <ToggleButton>你好</ToggleButton>
        <CheckBox>测试CheckBox</CheckBox>
        <StackPanel Orientation="Horizontal">
            <RadioButton>测试1</RadioButton>
            <RadioButton>测试2</RadioButton>
            <RadioButton>测试3</RadioButton>
        </StackPanel>
        <ComboBox Width="140" yui:YAttachProperty.YWatermark="选择一项">
            <TextBlock>Item1</TextBlock>
            <TextBlock>Item2</TextBlock>
            <TextBlock>Item3</TextBlock>
            <TextBlock>Item4</TextBlock>
            <TextBlock>Item5</TextBlock>
        </ComboBox>
    </StackPanel>
</Window>
